@model Student_Management_System.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                    <a href="~/Students/Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
                </form>
            </div>
        </div>
    </div>
</section>
