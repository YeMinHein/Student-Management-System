@model Student_Management_System.Models.Student

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name" required>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" required>
        </div>

        <div class="form-group">
            <label>Date of Birth</label>
            <input asp-for="DOB" type="date" class="form-control" required>
        </div>
               
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
        <a href="~/Students/Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
</div>
