@model Student_Management_System.Models.CourseRegistration

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-edit"></i> @(Model?.Id > 0 ? "Edit Registration" : "New Registration")</h3>
    </div>
    <div class="card-body">
        <form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")" method="post">
            @if (Model?.Id > 0)
            {
                <input type="hidden" asp-for="Id" />
            }

            <div class="form-group">
                <label asp-for="StudentId"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students">
                    <option value="">Select Student</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseId"></label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses">
                    <option value="">Select Course</option>
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

         <div class="card-footer text-right">
                
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>
